<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/closeBottomSheetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="monospace"
        android:text="Miscellaneous"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/grayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:id="@+id/grayBackground"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/gray_note" />

            <ImageView
                android:id="@+id/checkGrayBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:foregroundTint="@color/item"
                android:src="@drawable/baseline_check_24" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/yellowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:layout_width="30dp"
                android:id="@+id/yellowBackground"
                android:layout_height="30dp"
                android:background="@drawable/yellow_note" />

            <ImageView
                android:id="@+id/checkYellowBtn"
                android:layout_width="17dp"
                android:layout_height="24dp"
                android:layout_gravity="center"

                android:foregroundTint="@color/item"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/redBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:id="@+id/redBackground"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/red_note" />

            <ImageView
                android:id="@+id/checkRedBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:foregroundTint="@color/item"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/blueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:id="@+id/blueBackground"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/blue_note" />

            <ImageView
                android:id="@+id/checkBlueBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:foregroundTint="@color/item"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/greenBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <View
                android:id="@+id/greenBackground"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/green_note" />

            <ImageView
                android:id="@+id/checkGreenBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:foregroundTint="@color/item"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:text="Pick Color"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/addImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="monospace"
            android:padding="3dp"
            android:text="Add Image"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addURLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_add_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:text="Add URL"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="monospace"
            android:padding="4dp"
            android:text="Delete Note"
            android:textColor="@color/red"
            android:textSize="19sp" />
    </LinearLayout>


</LinearLayout>